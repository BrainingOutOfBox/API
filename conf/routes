# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
+ noJwtFilter
GET     /                                                   controllers.HomeController.index

+ noJwtFilter
POST    /login                                              controllers.ParticipantController.login

+ noJwtFilter
POST    /register                                           controllers.ParticipantController.createParticipant

GET     /requires-jwt-via-filter                            controllers.ParticipantController.requiresJwtViaFilter

+ noJwtFilter
POST    /createBrainstormingTeam                            controllers.TeamController.createBrainstormingTeam
+ noJwtFilter
GET     /:participant/getMyBrainstormingTeams               controllers.TeamController.getBrainstormingTeamForParticipant(participant)


+ noJwtFilter
GET     /:teamIdentifier/getBrainstormingFindings           controllers.FindingController.getBrainstormingFindingFromTeam(teamIdentifier)
+ noJwtFilter
POST    /:teamIdentifier/createBrainstormingFinding         controllers.FindingController.createBrainstormingFindingForTeam(teamIdentifier)

+ noJwtFilter
GET     /:teamIdentifier/:findingIdentifier/remainingTime   controllers.TimerController.calculateRemainingTimeOfFindingFromTeam(teamIdentifier, findingIdentifier)

# swagger routes
+ noJwtFilter
GET     /swagger.json                                       controllers.ApiHelpController.getResources
+ noJwtFilter
GET     /docs/                                              controllers.Assets.at(path="/public/swagger",file="index.html")
+ noJwtFilter
GET     /docs/*file                                         controllers.Assets.at(path="/public/swagger",file)

# Map static resources from the /public folder to the /assets URL path
+ noJwtFilter
GET     /assets/*file                                       controllers.Assets.versioned(path="/public", file: Asset)
