# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
+ noJwtFilter
GET     /                                           controllers.HomeController.index

+ noJwtFilter
POST    /login                                      controllers.TeamController.login

GET     /requires-jwt-via-filter                    controllers.TeamController.requiresJwtViaFilter

+ noJwtFilter
GET     /:teamIdentifier/getBrainstormingFinding    controllers.FindingController.getBrainstormingFindingFromTeam(teamIdentifier)
+ noJwtFilter
POST    /:teamIdentifier/createBrainstormingFinding controllers.FindingController.createBrainstormingFindingForTeam(teamIdentifier)

+ noJwtFilter
GET     /:teamIdentifier/:findingIdentifier/diff    controllers.TimerController.calculateDateDifferenceOfFindingFromTeam(teamIdentifier, findingIdentifier)

# swagger routes
+ noJwtFilter
GET     /swagger.json                               controllers.ApiHelpController.getResources
+ noJwtFilter
GET     /docs/                                      controllers.Assets.at(path="/public/swagger",file="index.html")
+ noJwtFilter
GET     /docs/*file                                 controllers.Assets.at(path="/public/swagger",file)

# Map static resources from the /public folder to the /assets URL path
+ noJwtFilter
GET     /assets/*file                               controllers.Assets.versioned(path="/public", file: Asset)
