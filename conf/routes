# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /timing/new                 controllers.TimerController.createTimer
GET     /timing/diff                controllers.TimerController.calculateDateDifference

# swagger routes
GET     /swagger.json               controllers.ApiHelpController.getResources
GET     /docs/                      controllers.Assets.at(path="/public/swagger",file="index.html")
GET     /docs/*file                 controllers.Assets.at(path="/public/swagger",file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
